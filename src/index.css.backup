@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Main Colors - Based on provided color palette */
  --primary: 330 85% 65%;   /* #F06292 - Pink for header/buttons */
  --primary-foreground: 0 0% 100%;
  --secondary: 340 82% 52%;  /* #E91E63 - Deeper pink for completion indicators */
  --secondary-foreground: 0 0% 100%;
  --accent: 350 89% 60%;      /* #EC407A - Vibrant pink for urgent tasks/deletion */
  --accent-foreground: 0 0% 100%;
  
  /* System Colors */
  --success: 145 45% 50%;   /* #47B881 - Keeping green for success */
  --success-foreground: 0 0% 100%;
  --success-muted: 145 45% 90%;
  
  --warning: 37 90% 60%;    /* #F5B041 - Yellow for warnings */
  --warning-foreground: 0 0% 10%;
  --warning-muted: 37 90% 90%;
  
  --error: 9 78% 57%;       /* #E74C3C - Keeping red for errors */
  --error-foreground: 0 0% 100%;
  --error-muted: 9 78% 90%;
  
  --info: 330 85% 65%;      /* #F06292 - Same as primary */
  --info-foreground: 0 0% 100%;
  --info-muted: 330 85% 90%;
  
  /* Surface Colors */
  --surface: 330 30% 98%;      /* #FEF4F7 - Light pink background */
  --surface-foreground: 0 0% 20%;  /* #333333 - Dark text */
  --surface-muted: 330 30% 94%;
  
  --background: 330 30% 98%;    /* #FEF4F7 - Light pink background */
  --foreground: 0 0% 20%;    /* #333333 - Dark text */
  
  --card: 0 0% 100%;
  --card-foreground: 0 0% 20%;
  
  --popover: 0 0% 100%;
  --popover-foreground: 0 0% 20%;
  
  --muted: 330 20% 94%;
  --muted-foreground: 0 0% 45%;
  
  /* Color Shades - Primary (Pink) */
  --primary-50: 330 85% 97%;
  --primary-100: 330 85% 94%;
  --primary-200: 330 85% 88%;
  --primary-300: 330 85% 75%;
  --primary-400: 330 85% 70%;
  --primary-500: 330 85% 65%;  /* #F06292 */
  --primary-600: 330 85% 55%;
  --primary-700: 330 85% 45%;
  --primary-800: 330 85% 35%;
  --primary-900: 330 85% 25%;
  
  /* Color Shades - Secondary (Deeper Pink) */
  --secondary-50: 340 82% 97%;
  --secondary-100: 340 82% 94%;
  --secondary-200: 340 82% 88%;
  --secondary-300: 340 82% 75%;
  --secondary-400: 340 82% 60%;
  --secondary-500: 340 82% 52%;  /* #E91E63 */
  --secondary-600: 340 82% 42%;
  --secondary-700: 340 82% 35%;
  --secondary-800: 340 82% 28%;
  --secondary-900: 340 82% 22%;
  
  /* Color Shades - Accent (Vibrant Pink) */
  --accent-50: 350 89% 97%;
  --accent-100: 350 89% 94%;
  --accent-200: 350 89% 88%;
  --accent-300: 350 89% 75%;
  --accent-400: 350 89% 65%;
  --accent-500: 350 89% 60%;  /* #EC407A */
  --accent-600: 350 89% 50%;
  --accent-700: 350 89% 40%;
  --accent-800: 350 89% 30%;
  --accent-900: 350 89% 23%;
  
  /* System Variables */
  --border: 330 20% 90%;
  --input: var(--border);
  --ring: var(--primary);
  
  /* Border Radius */
  --radius-sm: 0.25rem;
  --radius-md: 0.5rem;
  --radius-lg: 1rem;
}

.dark {
  --background: 330 30% 10%;
  --foreground: 0 0% 95%;
  
  --card: 330 30% 12%;
  --card-foreground: 0 0% 95%;
  
  --popover: 330 30% 12%;
  --popover-foreground: 0 0% 95%;
  
  --primary: 330 85% 70%;
  --primary-foreground: 0 0% 0%;
  
  --secondary: 340 82% 57%;
  --secondary-foreground: 0 0% 0%;
  
  --muted: 330 30% 20%;
  --muted-foreground: 330 20% 70%;
  
  --accent: 350 89% 65%;
  --accent-foreground: 0 0% 0%;
  
  --border: 330 30% 25%;
  --input: 330 30% 25%;
  --ring: 330 85% 70%;
  
  /* Dark Mode System Colors */
  --success: 145 45% 55%;
  --warning: 37 90% 65%;
  --error: 9 78% 62%;
  --info: 330 85% 70%;
  
  /* Surface Colors */
  --surface: 330 30% 12%;
  --surface-foreground: 0 0% 95%;
  --surface-muted: 330 30% 18%;
}

@keyframes taskComplete {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

@layer components {
  /* Task Card Component */
  .task-card {
    @apply bg-card text-card-foreground rounded-md p-4 mb-3 shadow-task-card transition-shadow duration-200;
  }
  
  .task-card:hover {
    @apply shadow-task-card-hover;
  }
  
  /* Task Input Component */
  .task-input {
    @apply w-full p-3 rounded-md border border-input bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent;
  }
  
  /* Button Components */
  .btn-primary {
    @apply bg-primary text-primary-foreground hover:bg-primary-600 px-4 py-2 rounded-md transition-colors duration-200;
  }
  
  .btn-secondary {
    @apply bg-secondary text-secondary-foreground hover:bg-secondary-600 px-4 py-2 rounded-md transition-colors duration-200;
  }
  
  .btn-danger {
    @apply bg-accent text-accent-foreground hover:bg-accent-600 px-4 py-2 rounded-md transition-colors duration-200;
  }
  
  /* Checkbox Component */
  .task-checkbox {
    @apply h-5 w-5 rounded border-2 border-primary-300 bg-background checked:bg-secondary checked:border-secondary transition-colors duration-200;
  }
  
  /* Badge Components */
  .badge {
    @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
  }
  
  .badge-primary {
    @apply bg-primary-100 text-primary-800;
  }
  
  .badge-secondary {
    @apply bg-secondary-100 text-secondary-800;
  }
  
  .badge-accent {
    @apply bg-accent-100 text-accent-800;
  }
  
  /* Priority Indicators */
  .priority-high {
    @apply badge bg-accent-100 text-accent-800;
  }
  
  .priority-medium {
    @apply badge bg-warning-muted text-warning-foreground;
  }
  
  .priority-low {
    @apply badge bg-info-muted text-info-foreground;
  }
  
  /* Neumorphic Card Style */
  .neumorphic-card {
    @apply bg-surface rounded-lg p-4 shadow-neumorphic;
  }
  
  .dark .neumorphic-card {
    @apply shadow-neumorphic-dark;
  }
  
  /* Task Completion Animation */
  .task-complete-animation {
    animation: taskComplete 0.3s ease-in-out;
  }
  
  /* Layout Components */
  .container-app {
    @apply max-w-4xl mx-auto px-4 py-6;
  }
  
  /* Navigation Components */
  .nav-sidebar {
    @apply hidden md:flex flex-col w-64 bg-card p-4 h-screen;
  }
  
  .nav-bottom-bar {
    @apply fixed bottom-0 left-0 right-0 bg-card md:hidden flex justify-around items-center p-3 border-t border-border;
  }
  
  .nav-item {
    @apply flex items-center p-2 rounded-md hover:bg-muted transition-colors duration-200;
  }
  
  .nav-item-active {
    @apply bg-primary text-primary-foreground hover:bg-primary-600;
  }
}